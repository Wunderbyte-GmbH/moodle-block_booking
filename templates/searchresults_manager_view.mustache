{{!
    @template block_booking/searchresults_manager_view

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

    TODO:
    Context variables required for this template:
    * examplevariable - array: An array with values.
    * etc.

    Example context (json):
    {
    "searchresultstablehtml" : "<table></table",
    "resultsmessage" : "1 booking options found (click to show)",
    "success":true
    }
}}
{{#resultsmessage}}
    {{#success}}
        <a href="#" data-toggle="modal" data-target="#booking-block-modal">
            <div class="alert alert-primary" role="alert">
                {{resultsmessage}}
            </div>
        </a>
    {{/success}}
    {{^success}}
        <div class="alert alert-warning" role="alert">
            {{resultsmessage}}
        </div>
    {{/success}}
{{/resultsmessage}}

<div id="booking-block-modal" class="modal in" tabindex="-1" role="dialog"
     aria-labelledby="bookingBlockModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title" id="bookingBlockModalLabel">{{#str}} title, block_booking {{/str}}</h5>
                <button type="button" class="btn btn-closex" data-dismiss="modal">X</button>
            </div>
            <div class="modal-body">
                <!-- The actual content goes here. -->
                <div id="block-booking-table-results">
                    {{{searchresultstablehtml}}}
                </div>
            </div>
            <div class="modal-footer bg-primary">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
